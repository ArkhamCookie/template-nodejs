# https://editorconfig.org helps developers define and maintain consistent coding styles between different editors and IDEs

root = true

# General
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Data files
[*.{csv,json,toml,xml,yaml}]
indent_size = 2